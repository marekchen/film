<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ProgressBar android:id="@android:id/progress"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true" />
    <!--<com.douban.movie.widget.ErrorView android:id="@+id/v_error"-->
                                       <!--android:visibility="gone"-->
                                       <!--android:layout_width="wrap_content"-->
                                       <!--android:layout_height="wrap_content"-->
                                       <!--android:text="@string/error_load"-->
                                       <!--android:layout_centerInParent="true"-->
                                       <!--style="@style/Text.Empty" />-->
    <ScrollView android:id="@+id/v_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true">
        <RelativeLayout android:paddingBottom="15.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView android:textSize="22.0sp"
                      android:textColor="@color/black"
                      android:id="@id/tv_review_title"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10.0dip"
                      android:layout_marginTop="15.0dip"
                      android:layout_marginRight="10.0dip"
                      android:layout_marginBottom="15.0dip"
                      android:maxLines="3"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true"
                      style="@style/TextNormal" />
            <TextView android:textSize="13.0sp"
                      android:textColor="#ff020202"
                      android:id="@id/tv_review_author"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15.0dip"
                      android:layout_marginTop="3.0dip"
                      android:layout_below="@id/tv_review_title"
                      android:layout_alignParentLeft="true"
                      style="@style/Text_MainBody2" />
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/tv_review_author"
                            android:layout_alignTop="@id/tv_review_author"
                            android:layout_alignBottom="@id/tv_review_author">
                <RatingBar android:id="@id/rb_review_rating"
                           android:focusable="false"
                           android:focusableInTouchMode="false"
                           android:clickable="false"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="3.0dip"
                           android:max="5" android:isIndicator="true"
                           android:layout_centerVertical="true"
                           style="@style/RatingBar" />
            </RelativeLayout>
            <TextView android:textSize="16.0sp"
                      android:textColor="#ff020202"
                      android:id="@id/tv_review_content"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15.0dip"
                      android:layout_marginTop="10.0dip"
                      android:layout_marginRight="15.0dip"
                      android:text="@string/comment"
                      android:layout_below="@id/tv_review_author"
                      android:layout_alignParentLeft="true"
                      android:lineSpacingMultiplier="1.2"
                      style="@style/Text_MainBody2" />
            <Button android:id="@+id/btn_useful"
                    android:paddingLeft="7.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="7.0dip"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:text="@string/useful"
                    android:layout_toLeftOf="@+id/btn_useless"
                    android:layout_below="@id/tv_review_content"
                    style="@style/Button.Holo.Blue" />
            <Button android:id="@id/btn_useless"
                    android:paddingLeft="7.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="7.0dip"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:text="@string/useless"
                    android:layout_below="@id/tv_review_content"
                    android:layout_alignParentRight="true"
                    style="@style/Button.Holo.Blue" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>