<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/id_content"
                android:background="@drawable/list_selector_holo_light"
                android:paddingLeft="3.0dip"
                android:paddingTop="14.0dip"
                android:paddingRight="3.0dip"
                android:paddingBottom="14.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="16.0sp"
              android:textColor="@color/black"
              android:id="@+id/tv_review_title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              style="@style/TextNormal" />
    <TextView android:textSize="13.0sp"
              android:textColor="#ff020202"
              android:id="@+id/tv_review_author"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_marginTop="5.0dip"
              android:layout_below="@id/tv_review_title"
              android:layout_alignParentLeft="true"
              style="@style/Text_MainBody2" />
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@id/tv_review_author"
                    android:layout_alignTop="@id/tv_review_author"
                    android:layout_alignBottom="@id/tv_review_author">
        <RatingBar android:id="@+id/rb_review_rating"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:clickable="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3.0dip"
                   android:max="5"
                   android:progress="2"
                   android:isIndicator="true"
                   android:layout_centerVertical="true"
                   style="@style/RatingBar" />
    </RelativeLayout>
    <TextView android:textSize="13.0sp"
              android:textColor="#ffc3c3c3"
              android:id="@+id/tv_usefulCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/label_comment_useful"
              android:layout_alignBaseline="@id/tv_review_author"
              android:layout_alignParentRight="true" style="@style/TextNormal" />
    <TextView android:textSize="13.0sp"
              android:textColor="#ff020202"
              android:id="@+id/tv_review_content"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5.0dip"
              android:text="@string/comment"
              android:layout_below="@id/tv_review_author"
              android:layout_alignParentLeft="true"
              android:lineSpacingMultiplier="1.2"
              style="@style/Text_MainBody2" />
</RelativeLayout>